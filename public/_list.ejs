<section class="posts">
    <% var posts = public.posts._data;
       for(var post in posts) { %>
            <article>
                <a href="/posts/<%- post %>" class="blogPost <%- post %>"><%- posts[post].title %></a>
                <time datetime="<%- posts[post].date %>"><%- posts[post].date %></time>
            </article>
    <% } %>
</section>
